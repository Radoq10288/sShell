# Program name
PROG = sShell

# Compiler
CC = mingw32-gcc

# Compiler flags
CFLAGS = -g -pedantic -std=c11 -Wall

# C/C++ files
CFILES = builtin-cmd.c change-directory.c exec-cmd.c parse-str.c read-str.c sShell.c

# C/++ Header files
CHFILES =  builtin-cmd.h change-directory.h exec-cmd.h parse-str.h read-str.h

# Object files
OBJECTS = builtin-cmd.o change-directory.o exec-cmd.o parse-str.o read-str.o sShell.o


$(PROG) : $(OBJECTS)
	$(CC) -o $(PROG) $(OBJECTS)

$(OBJECTS) : $(CFILES) $(CHFILES)
	$(CC) -c $(CFILES) $(CFLAGS)

clean :
	rm -f $(PROG) $(OBJECTS)



